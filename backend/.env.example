# Laravel Backend Environment Variables
# Copy this file to .env and fill in your values

APP_NAME="R.W.S Blog"
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=false
APP_URL=https://your-supabase-project.supabase.co

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Supabase Database Configuration
DB_CONNECTION=pgsql
DB_HOST=db.your-project.supabase.co
DB_PORT=5432
DB_DATABASE=postgres
DB_USERNAME=postgres
DB_PASSWORD=YOUR_DATABASE_PASSWORD

# Cache & Session (use database for Supabase compatibility)
CACHE_DRIVER=database
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
SESSION_DRIVER=database
SESSION_LIFETIME=120

# Laravel Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=your-vercel-app.vercel.app,localhost:3000
SESSION_DOMAIN=.vercel.app

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-vercel-app.vercel.app,http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Accept,Authorization,Content-Type,X-Requested-With,X-CSRF-TOKEN

# Mail Configuration (optional)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Security
BCRYPT_ROUNDS=12